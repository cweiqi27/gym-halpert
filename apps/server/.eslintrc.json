{
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:promise/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["apps/server/tsconfig.json"]
  },
  "plugins": ["@typescript-eslint", "jest", "promise"],
